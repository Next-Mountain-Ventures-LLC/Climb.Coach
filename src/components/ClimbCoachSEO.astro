---
import seoImage from '@/assets/seo-image_nw_486998f1.jpg';

// Get the current URL
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<meta charset="utf-8" />
<meta name="robots" content="index, follow" />
<meta name="googlebot" content="index, follow" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="generator" content="new.website - https://new.website" />
<link rel="canonical" href={canonicalURL} />
<link
  rel="shortcut icon"
  type="image/png"
  href="/climbcoachfavicon_no_bg_nw_b15ea69e.png"
/>

<!-- SEO Meta Tags -->
<title>Climb.Coach | The Performance Coach for Entrepreneurs</title>
<meta name="title" content="Climb.Coach | The Performance Coach for Entrepreneurs" />
<meta name="description" content="Break your hustle habit and design a life of constant, beautiful progress." />

<!-- Open Graph / Facebook Meta Tags -->
<meta property="og:type" content="website" />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content="Climb.Coach | The Performance Coach for Entrepreneurs" />
<meta property="og:description" content="Break your hustle habit and design a life of constant, beautiful progress." />
<meta property="og:image" content={new URL(seoImage.src, Astro.site)} />

<!-- Twitter Meta Tags -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content="Climb.Coach | The Performance Coach for Entrepreneurs" />
<meta property="twitter:description" content="Break your hustle habit and design a life of constant, beautiful progress." />
<meta property="twitter:image" content={new URL(seoImage.src, Astro.site)} />

<!-- DO NOT REMOVE - Plausible Analytics must always be enabled -->
<script is:inline>
  // Plausible Analytics - Dynamic Domain Detection
  // This script automatically detects the current domain and loads Plausible analytics
  (function() {
    const hostname = window.location.hostname;
    
    // Only track production domains (exclude localhost, IP addresses, etc.)
    if (hostname !== 'localhost' && !hostname.match(/^\d+\.\d+\.\d+\.\d+$/)) {
      const script = document.createElement('script');
      script.defer = true;
      script.setAttribute('data-domain', hostname);
      script.src = 'https://plausible.io/js/script.js';
      document.head.appendChild(script);
    }
  })();
</script>