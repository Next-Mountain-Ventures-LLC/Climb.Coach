---
import { buttonVariants } from "@/components/ui/button";
import { Image } from "astro:assets";
import logo from "../assets/main_no_bg_nw_b5d07dc7.png";
---

<script>
  // Mobile menu toggle functionality
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    const menuIcon = mobileMenuToggle?.querySelector('svg:first-child');
    const closeIcon = mobileMenuToggle?.querySelector('svg:last-child');
    const body = document.body;
    
    if (mobileMenuToggle && mobileMenu && menuIcon && closeIcon) {
      mobileMenuToggle.addEventListener('click', () => {
        const expanded = mobileMenuToggle.getAttribute('aria-expanded') === 'true';
        const newExpanded = !expanded;
        
        // Toggle aria-expanded attribute
        mobileMenuToggle.setAttribute('aria-expanded', newExpanded.toString());
        
        // Toggle menu visibility
        mobileMenu.classList.toggle('hidden', !newExpanded);
        mobileMenu.classList.toggle('flex', newExpanded);
        
        // Toggle body scroll
        body.classList.toggle('overflow-hidden', newExpanded);
        
        // Toggle icons
        menuIcon.classList.toggle('hidden', newExpanded);
        menuIcon.classList.toggle('block', !newExpanded);
        closeIcon.classList.toggle('hidden', !newExpanded);
        closeIcon.classList.toggle('block', newExpanded);
      });
      
      // Close menu when clicking on a link
      const mobileLinks = mobileMenu.querySelectorAll('a');
      mobileLinks.forEach(link => {
        link.addEventListener('click', () => {
          // Set menu to closed state
          mobileMenuToggle.setAttribute('aria-expanded', 'false');
          mobileMenu.classList.add('hidden');
          mobileMenu.classList.remove('flex');
          body.classList.remove('overflow-hidden');
          
          // Show menu icon, hide close icon
          menuIcon.classList.remove('hidden');
          menuIcon.classList.add('block');
          closeIcon.classList.add('hidden');
          closeIcon.classList.remove('block');
        });
      });
    }
  });
</script>

<header
  class="bg-background/95 supports-[backdrop-filter]:bg-background/60 sticky top-0 z-50 w-full border-b border-mountain-green/30 backdrop-blur"
>
  <div
    class="container flex h-16 items-center space-x-4 sm:justify-between sm:space-x-0"
  >
    <div class="flex gap-6 md:gap-10">
      <a href="/" class="flex items-center space-x-2">
        <Image src={logo} alt="Climb.Coach" width={180} height={40} class="h-10 w-auto" />
      </a>
    </div>
    <div class="flex flex-1 items-center justify-end space-x-4">
      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-6 font-medium text-charcoal">
        <a
          href="#about"
          class="hover:text-blue-mell transition-colors"
        >
          About
        </a>
        <a
          href="#method"
          class="hover:text-blue-mell transition-colors"
        >
          The Climb Method
        </a>
        <a
          href="#services"
          class="hover:text-blue-mell transition-colors"
        >
          Pricing
        </a>
        <a
          href="#climbos"
          class="hover:text-blue-mell transition-colors"
        >
          ClimbOS
        </a>
      </nav>
      
      <!-- Desktop CTA -->
      <a
        href="#services"
        class="hidden md:inline-flex items-center justify-center rounded-md font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:opacity-50 disabled:pointer-events-none ring-offset-background text-white hover:bg-cambridge-blue/90 h-9 px-4 py-2"
        style="background-color: #364958;"
      >
        Start Free Trial
      </a>
      
      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-toggle"
        type="button"
        class="md:hidden inline-flex items-center justify-center rounded-md p-2 text-charcoal hover:bg-mountain-green/20 hover:text-charcoal focus:outline-none focus:ring-2 focus:ring-inset focus:ring-mountain-green transition-colors"
        aria-controls="mobile-menu"
        aria-expanded="false"
      >
        <span class="sr-only">Open main menu</span>
        <!-- Menu icon -->
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="block h-6 w-6" aria-hidden="true">
          <line x1="4" x2="20" y1="12" y2="12" />
          <line x1="4" x2="20" y1="6" y2="6" />
          <line x1="4" x2="20" y1="18" y2="18" />
        </svg>
        <!-- Close icon -->
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="hidden h-6 w-6" aria-hidden="true">
          <path d="M18 6 6 18" />
          <path d="m6 6 12 12" />
        </svg>
      </button>
      
      <!-- Mobile CTA - smaller and more compact -->
      <a
        href="#services"
        class="md:hidden inline-flex items-center justify-center rounded-md font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:opacity-50 disabled:pointer-events-none ring-offset-background text-white hover:bg-cambridge-blue/90 h-8 px-3 py-1 text-xs"
        style="background-color: #364958;"
      >
        Start Trial
      </a>
    </div>
  </div>
  
  <!-- Mobile menu, show/hide based on menu state -->
  <div id="mobile-menu" class="md:hidden hidden fixed inset-0 z-50 bg-background/95 backdrop-blur-sm flex-col justify-start pt-16 px-4 pb-8 overflow-y-auto">
    <nav class="flex flex-col items-center space-y-8 font-medium text-lg text-charcoal mt-10">
      <a
        href="#about"
        class="w-full text-center py-2 hover:text-blue-mell transition-colors"
      >
        About
      </a>
      <a
        href="#method"
        class="w-full text-center py-2 hover:text-blue-mell transition-colors"
      >
        The Climb Method
      </a>
      <a
        href="#services"
        class="w-full text-center py-2 hover:text-blue-mell transition-colors"
      >
        Pricing
      </a>
      <a
        href="#climbos"
        class="w-full text-center py-2 hover:text-blue-mell transition-colors"
      >
        ClimbOS
      </a>
      
      <div class="w-full pt-6 mt-6 border-t border-mountain-green/30">
        <a
          href="#services"
          class="w-full flex items-center justify-center rounded-md font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:opacity-50 disabled:pointer-events-none ring-offset-background text-white hover:bg-cambridge-blue/90 h-10 px-6 py-2"
          style="background-color: #364958;"
        >
          Start Free Trial
        </a>
        
        <p class="text-sm text-center mt-4 text-charcoal/70">
          First month free - No credit card required
        </p>
      </div>
    </nav>
  </div>
</header>
