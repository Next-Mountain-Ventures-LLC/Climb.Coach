---
import "@/styles/global.css";
import "@/styles/fonts.css";
import ClimbCoachSEO from "@/components/ClimbCoachSEO.astro";
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
---

<html lang="en">
  <head>
    <ClimbCoachSEO />
  </head>
  <body class="bg-background min-h-screen font-sans antialiased" data-mountain-bg>
    <div class="relative flex min-h-screen flex-col">
      <Header />
      <main class="flex-auto">
        <slot />
      </main>
      <script>
        // Mountain scroll animation
        document.addEventListener('DOMContentLoaded', () => {
          const mountainBg = document.querySelector('[data-mountain-bg]');
          if (mountainBg) {
            let initialPosition = 50;
            window.addEventListener('scroll', () => {
              const scrolled = window.scrollY;
              if (scrolled < 1000) {
                const newPosition = initialPosition - (scrolled * 0.05);
                mountainBg.style.backgroundPositionX = `${newPosition}%`;
              }
            });
          }
        });
      </script>
      <Footer />
    </div>
  </body>
</html>
