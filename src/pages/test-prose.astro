---
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title="Test Prose Classes">
  <div class="container mx-auto py-12 px-4">
    <h1 class="text-3xl font-bold mb-6">Testing Prose Classes</h1>
    
    <div class="prose prose-lg max-w-none">
      <h2 class="wp-block-heading">WordPress Heading 2</h2>
      <p>This is a test paragraph to see if prose classes are working correctly.</p>
      
      <h3 class="wp-block-heading">WordPress Heading 3</h3>
      <p>Another paragraph with some content.</p>
      
      <ul class="wp-block-list">
        <li>List item 1</li>
        <li>List item 2</li>
        <li>List item 3</li>
      </ul>
      
      <h4 class="wp-block-heading">WordPress Heading 4</h4>
      <p>Final test paragraph.</p>
    </div>
  </div>
</BaseLayout>